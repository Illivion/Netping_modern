                {
                <div class="hidden subMenu">
                    @foreach (var subItem in item.Pages)
                    {
                        ++subIndex;
                        <div><a href="javascript:void(0)" class="subPageItem" data-item-id="@subIndex"><b class="@(subItem.Pages.Any() ? "right-caret" : "square")"></b> @subItem.Title.Replace("%2E", ".")</a></div>
